<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView26"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFB300"
            android:fontFamily="@font/lora_italic"
            android:padding="10dp"
            android:text="Thủ Thư"
            android:textAlignment="center"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edMaTT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:fontFamily="@font/lora_italic"
            android:hint="Mã thủ thư"
            android:padding="10dp" />

        <EditText
            android:id="@+id/edHoTenTT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:ems="10"
            android:fontFamily="@font/lora_italic"
            android:hint="Họ tên thủ thư"
            android:inputType="textPersonName"
            android:padding="10dp" />

        <EditText
            android:id="@+id/edMatKhauTT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:ems="10"
            android:fontFamily="@font/lora_italic"
            android:hint="Mật khẩu"
            android:inputType="textPersonName"
            android:padding="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSaveTT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/radius_button"
                android:text="lƯU"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnCancelTT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/radius_button"
                android:text="hỦY"
                android:textAllCaps="false" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>